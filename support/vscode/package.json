{
  "name": "vscode-veryl",
  "displayName": "Veryl (Deprecated)",
  "description": "Veryl extension for Visual Studio Code (Deprecated, use veryl-lang.vscode-veryl)",
  "version": "0.16.5",
  "publisher": "dalance",
  "icon": "veryl_icon.png",
  "galleryBanner": {
      "color": "#ffffff",
      "themr": "light"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/veryl-lang/veryl.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:veryl",
    "workspaceContains:*/Veryl.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "menus": {},
    "configuration": [],
    "languages": [],
    "grammars": []
  },
  "extensionDependencies": [
    "veryl-lang.vscode-veryl"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy:linux-x64": "vsce publish --target linux-x64",
    "deploy:win32-x64": "vsce publish --target win32-x64",
    "deploy:darwin-x64": "vsce publish --target darwin-x64",
    "deploy:darwin-arm64": "vsce publish --target darwin-arm64"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.31.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
